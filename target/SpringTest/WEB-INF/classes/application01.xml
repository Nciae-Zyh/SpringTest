<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- Spring入门的配置 -->
    <!-- 1.（第4章上机练习1）在控制台输出：张嘎说：“三天不打小鬼子，手都痒痒！” -->
    <bean id="greeting01" class="edu.nciae.zyh.normal.print.Greeting">
        <property name="person"><value>张嘎</value></property>
        <property name="words"><value>三天不打小鬼子，手都痒痒！</value></property>
    </bean>

    <!-- 2.（第5章上机练习1）使用构造注入完成属性赋值 -->
    <bean id="greeting02" class="edu.nciae.zyh.normal.print.Greeting">
        <constructor-arg><value>张嘎</value></constructor-arg>
        <constructor-arg><value>三天不打小鬼子，手都痒痒！</value></constructor-arg>
    </bean>

    <bean id="greeting03" class="edu.nciae.zyh.normal.print.Greeting" p:person="张嘎" p:words="三天不打小鬼子，手都痒痒！"/>

</beans>
